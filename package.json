{
  "name": "@versum/react-native-markdown-input",
  "version": "0.1.1",
  "description": "Markdown input for React Native",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.tsx",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "bootstrap": "yarn example && yarn",
    "docs:build": "rm -rf .docz/ docs/ lib/ && yarn docz build",
    "docs:dev": "rm -rf .docz/ docs/ && yarn docz dev",
    "example": "yarn --cwd Example",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "prepare": "bob build",
    "release": "release-it",
    "test": "jest --coverage --runInBand && yarn coverage",
    "coverage": "jest-coverage-badges ./coverage/coverage-summary.json --output ./badges",
    "test:watch": "jest --watch",
    "typescript": "tsc --noEmit"
  },
  "repository": "https://github.com/versum/react-native-markdown-input",
  "author": "Michal Kantor <kantorm96@gmail.com>, Damian Sznajder <damsznajder@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.8.6",
    "@babel/preset-typescript": "7.8.3",
    "@commitlint/config-conventional": "8.3.4",
    "@react-native-community/bob": "0.9.7",
    "@release-it/conventional-changelog": "1.1.0",
    "@types/jest": "25.1.2",
    "@types/react": "16.9.19",
    "@types/react-native": "0.61.10",
    "commitlint": "8.3.4",
    "docz": "2.2.0",
    "eslint": "6.8.0",
    "eslint-config-satya164": "3.1.5",
    "eslint-plugin-react-native-a11y": "2.0.0-rc0",
    "husky": "4.0.1",
    "jest": "25.1.0",
    "jest-coverage-badges": "1.1.2",
    "metro-react-native-babel-preset": "0.58.0",
    "prettier": "1.19.1",
    "react": "16.9.0",
    "react-art": "16.13.0",
    "react-dom": "16.13.0",
    "react-native": "0.61.5",
    "react-native-testing-library": "1.12.0",
    "react-native-web": "0.12.2",
    "react-test-renderer": "16.12.0",
    "release-it": "12.6.1",
    "typescript": "3.7.5",
    "yarn": "1.22.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/Example/node_modules",
      "<rootDir>/lib/",
      "<rootDir>/.docz/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native)"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn typescript",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
