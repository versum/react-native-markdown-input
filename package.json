{
  "name": "@versum/react-native-markdown-input",
  "version": "0.0.2",
  "description": "Markdown input for React Native",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.tsx",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "bootstrap": "yarn example && yarn",
    "docs": "yarn docz",
    "example": "yarn --cwd Example",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "prepare": "bob build",
    "release": "release-it",
    "test": "jest --coverage --runInBand",
    "test:watch": "jest --watch",
    "typescript": "tsc --noEmit"
  },
  "repository": "https://github.com/versum/react-native-markdown-input",
  "author": "Michal Kantor <kantorm96@gmail.com>, Damian Sznajder <damsznajder@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.8.6",
    "@babel/preset-typescript": "7.8.3",
    "@commitlint/config-conventional": "8.3.4",
    "@react-native-community/bob": "0.9.7",
    "@release-it/conventional-changelog": "1.1.0",
    "@types/jest": "25.1.2",
    "@types/react": "16.9.19",
    "@types/react-native": "0.61.10",
    "commitlint": "8.3.4",
    "docz": "2.2.0",
    "eslint": "6.8.0",
    "eslint-config-satya164": "3.1.5",
    "husky": "4.0.1",
    "jest": "25.1.0",
    "metro-react-native-babel-preset": "0.58.0",
    "prettier": "1.19.1",
    "react": "16.9.0",
    "react-art": "16.13.0",
    "react-dom": "16.13.0",
    "react-native": "0.61.5",
    "react-native-testing-library": "1.12.0",
    "react-native-web": "0.12.2",
    "react-test-renderer": "16.12.0",
    "release-it": "12.6.1",
    "typescript": "3.7.5",
    "yarn": "1.22.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/Example/node_modules",
      "<rootDir>/lib/",
      "<rootDir>/.docz/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native)"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn typescript",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
