{
  "name": "@versum/react-native-markdown-input",
  "version": "0.1.0",
  "description": "Markdown input for React Native",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.tsx",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "test": "jest --coverage --runInBand",
    "test:watch": "jest --watch",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "prepare": "bob build",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn && cd example/ios && pod install"
  },
  "repository": "https://github.com/versum/react-native-markdown-input",
  "author": "Michal Kantor <kantorm96@gmail.com>, Damian Sznajder <damsznajder@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@react-native-community/bob": "^0.9.7",
    "@types/jest": "^25.1.2",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.61.10",
    "commitlint": "^8.3.4",
    "eslint": "^6.8.0",
    "eslint-config-satya164": "3.1.5",
    "husky": "^4.0.1",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "react": "~16.9.0",
    "react-native": "~0.61.5",
    "react-native-testing-library": "1.12.0",
    "react-test-renderer": "16.12.0",
    "typescript": "^3.7.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native)"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn typescript",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
